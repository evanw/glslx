void main(bool a, bool b) {
  if (a) {
    if (b)
      foo();
  }
  else
    bar();
}
", "
void foo();
void bar();

void main(bool a, bool b) {
  if (a) {
    if (b)
      foo();
  }
  else
    bar();
}
").compactSyntaxTree

# Check for dangling else issue
test("
void foo();
void bar();

void main(bool a, bool b) {
